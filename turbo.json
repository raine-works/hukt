{
	"$schema": "https://turborepo.org/schema.json",
	"ui": "tui",
	"globalPassThroughEnv": ["GITHUB_TOKEN"],
	"globalEnv": ["HOME", "NODE_ENV", "TZ"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["./.build/**"]
		},
		"build:docker": {
			"cache": false
		},
		"dev": {
			"dependsOn": ["^build"],
			"persistent": true,
			"cache": false
		},
		"lint": {
			"cache": false
		}
	}
}
