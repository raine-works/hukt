{
	"name": "@hukt/server",
	"private": true,
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/raine-works/hukt",
		"directory": "packages/server"
	},
	"scripts": {
		"build": "bun build ./src/index.ts --compile --external=cpu-features --outfile=./.build/server",
		"build:docker": "bash scripts/build.sh",
		"dev": "bun run --watch ./src/index.ts"
	},
	"dependencies": {
		"@hukt/tools": "workspace:*",
		"@orpc/contract": "catalog:",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/zod": "catalog:",
		"ssh2": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@hukt/tsconfig": "workspace:*",
		"@types/ssh2": "catalog:"
	},
	"peerDependencies": {
		"bun-types": "catalog:",
		"typescript": "catalog:"
	}
}
