{
	"name": "hukt",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/raine-works/hukt"
	},
	"scripts": {
		"auth:docker": "rm -rf ~/.docker && echo $(gh auth token) | docker login ghcr.io -u $(gh api user | jq -r '.login') --password-stdin",
		"build": "turbo run build",
		"build:docker": "turbo run build:docker",
		"dev": "turbo run dev"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"catalog": {
			"@biomejs/biome": "2.3.11",
			"@types/ssh2": "1.15.5",
			"bun-types": "1.3.5",
			"ssh2": "1.17.0",
			"turbo": "2.7.3",
			"typescript": "5.9.3"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@hukt/tsconfig": "workspace:*",
		"bun-types": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:"
	},
	"trustedDependencies": [
		"@types/ssh2",
		"ssh2"
	],
	"packageManager": "bun@1.3.5"
}
